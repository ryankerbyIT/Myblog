# frozen_string_literal: true

source "https://rubygems.org"

# Jekyll and its plugins
gem "jekyll", "~> 4.3"
gem "jekyll-theme-chirpy", "~> 7.1"

group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-feed"
  gem "jekyll-archives"
  gem "jekyll-include-cache"
end

platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end
